datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String      @id @default(cuid())
  username     String      @unique
  passwordHash String
  createdAt    DateTime    @default(now())
  preferences  Preference?
  swipes       Swipe[]
}

model Preference {
  id        String   @id @default(cuid())
  userId    String   @unique
  region    String
  typesJson String   // JSON string array, e.g. ["fire","water"]
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
}

model Swipe {
  id          String   @id @default(cuid())
  userId      String
  pokemonId   Int
  decision    String   // "LIKE" | "DISLIKE"
  pokemonName String
  spriteUrl   String
  createdAt   DateTime @default(now())

  user User @relation(fields: [userId], references: [id])

  @@unique([userId, pokemonId])
}
